# LobbyLens Configuration

# Daily Signals API Keys (for government data)
CONGRESS_API_KEY=your_congress_api_key_here
REGULATIONS_GOV_API_KEY=your_regulations_gov_api_key_here

# Database configuration
# SQLite (fallback)
DATABASE_FILE=lobbywatch.db

# PostgreSQL (Railway production database)
DATABASE_URL=postgresql://user:password@host:port/database
# Local development (fallback):
# DATABASE_URL=postgresql://lobbylens:lobbylens_dev@localhost:5432/lobbylens_dev

# Slack Configuration
# Basic webhook support (legacy)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXXXXXX

# Enhanced Slack app features (recommended)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here

# Channels to send digests to (comma-separated channel IDs)
LOBBYLENS_CHANNELS=C1234567890,C0987654321

# Enable DM alerts to you personally
LOBBYLENS_ADMIN_USER_ID=U1234567890

# Bot configuration
LOG_LEVEL=INFO
DRY_RUN=false

# LDA V1 Feature Flag
ENABLE_LDA_V1=true

# LDA Data Source Configuration
LDA_DATA_SOURCE=api
LDA_BULK_BASE_URL=https://lda.senate.gov/filings/public/
LDA_API_BASE_URL=https://lda.senate.gov/api/v1/

# LDA API Key
LDA_API_KEY=your_lda_api_key_here
